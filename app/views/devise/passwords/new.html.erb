<div class="registration-container">
  <div class="registration-box animated fadeInDown">
    <div class="registration-logo"></div>
    <div class="registration-body">
      <div class="main2 alert-info">
        <p id="notice"><%= notice %></p>
        <p id="alert"><%= alert %></p>
      </div>
      <div class="registration-title"><strong>Forgot</strong> Password?</div>
      <div class="registration-subtitle">To get your password, enter your office mail and a password reset instruction will be sent to you. if you can't access your mail then contact administrator. </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
          <%= devise_error_messages! %>

          <h4>Your Office E-mail</h4>
        <div class="form-group">
          <div class="col-md-12">
            <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "email@domain.com" %>
          </div>
        </div>

        <div class="form-group push-up-20">
          <div class="col-md-6">
            <%= render "devise/shared/links" %>
          </div>
          <div class="col-md-6">
            <%= f.submit "reset password", :class => "btn btn-danger btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="registration-footer">
      <div class="pull-left">
        &copy; 2015 InsightInventory
      </div>
      <div class="pull-right">
        <a href="#">About</a> |
        <a href="#">Privacy</a> |
        <a href="#">Contact Admin</a>
      </div>
    </div>
  </div>

</div>






