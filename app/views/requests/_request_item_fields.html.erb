<fieldset>
  <div class="col-md-10">
    <div class="panel panel-warning">
      <div class="panel-heading">
        <h3 class="panel-title">Request Item</h3>
        <ul class="panel-controls">
          <li><a href="#" class=" remove_fields npanel-remove"><span class="fa fa-times"></span></a></li>
        </ul>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <div class="col-md-12">
            <%= f.collection_select :item_id, Item.all, :id, :name, class: "form-control", placeholder: "Select Item" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <%= f.number_field :quantity, class: "form-control", placeholder: "Enter quantity " %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <%= f.number_field :amount, class: "form-control", placeholder: "Enter Item amount as per requested period" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <%= f.select :currency, [['NGN', 'NGN'], ['GBP', 'GBP'], ['USD', 'USD'], ['YEN', 'YEN'], ['EUR', 'EUR']], class: "form-control", placeholder: "Select Currency" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <%= f.text_area :comment, :rows => 2, class: "form-control", placeholder: "Enter Comment if Any" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</fieldset>